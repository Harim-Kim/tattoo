<div class="center-block w-xxl w-auto-xs p-y-md text-center" style="margin-top:20px">
  <div class="p-a-md" >

<h2>Edit <%= resource_name.to_s.humanize %></h2><br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  
  <% if current_user.is_tattooist %>
  <div class="field">
    <h5 style="float:left;">Hourlyprice</h5><i>hourlyprice should be written!</i>
    <%= f.text_field :hourlyprice, autofocus: true, class: "form-control" , placeholder: "Only number" %>
  </div>
  <div class="field">
    <h5 style="float:left;">Specialty</h5>
    <%= f.text_field :specialty, class: "form-control" , placeholder: "Specialty" %>
  </div>
  <div class="field">
    <h5 style="float:left;">Prizes</h5>
    <%= f.text_area :prizes,size:"20", class: "form-control" , placeholder: "Prizes" %>
  </div>
  <div class="field">
    <h5 style="float:left;">Career</h5>
    <%= f.text_area :career,size:"20", class: "form-control" , placeholder: "Career" %>
  </div>
  <div class="field">
    <h5 style="float:left;">Introduction</h5>
    <%= f.text_area :introduction,row:"20", class: "form-control" %>
  </div>
  <%end%>
  
  
  <div class="field">
    <h5 style="float:left;">Email</h5>
    <%= f.email_field :email, class: "form-control", placeholder: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field form-group" style="margin-top:10px;">
    <h5 style="float:left;">Password</h5>
    <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field form-group">
    <h5 style="float:left;">Password confirmation</h5>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "password" %>
  </div>

  <div class="field">
    <h5 style="float:left;">Current Password</h5>
    <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off", class:"form-control", placeholder:"current_password" %>
  </div>
   <div class="field form-group">
    <h5 style="float:left;">Name</h5>
    <%= f.text_field :name , class: "form-control", placeholder: "Name" %>
  </div>
  <div class="field form-group">
    <h5 style="float:left;">Nick Name</h5>
    <%= f.text_field :nick_name , class: "form-control", placeholder: "Nick name" %>
  </div>
  <div class="field form-group">
    <h5 style="float:left;">Profile Image</h5>
    <%= f.file_field :image , class: "form-control" %>
  </div>
  <div class="field form-group">
    <h5 style="float:left;">Birthday</h5>
    <%= f.date_field :birthday , class: "form-control", placeholder: "birthday" %>
  </div>
  <div class="field form-group">
    <h5 style="float:left;">Phone Number</h5>
    <%= f.telephone_field :phonenumber , class: "form-control", placeholder: "Phone Number" %>
  </div>
  
  <div class="field form-group">
    <h5 style="float:left;">Gender</h5>
      <%= f.radio_button :gender, 'male', :checked => true %> 
      <%= label :gender_male, 'Male' %>
      <%= f.radio_button :gender, 'female' %>
      <%= label :gender_female, 'Female' %>
  </div>
  <div class="field">
    <h5 style="float:left;">Country</h5>
    <%= f.text_field :country, class: "form-control" , placeholder: "Country" %>
  </div>
  <div class="field">
    <h5 style="float:left;">City</h5>
    <%= f.text_field :city, class: "form-control" , placeholder: "City"%>
  </div>
  
  <div class="actions form-group">
    <%= f.submit "Update" , class:"btn btn-outline rounded b-primary text-primary" %>
  </div>
<% end %>
<hr>
<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>